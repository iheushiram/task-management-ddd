{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",

    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,

    "target": "ES2022",
    "types": ["jest", "node"],

    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"], // ← ここを追加
  "exclude": ["frontend/**", "node_modules/**", "dist/**"] // ← ここも追加
}
